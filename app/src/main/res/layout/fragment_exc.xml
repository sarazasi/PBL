<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".excFragment">

  <Button
      android:id="@+id/btnHome"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="@string/home"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <ImageView
      android:id="@+id/play_stand"
      android:layout_width="70dp"
      android:layout_height="70dp"
      android:layout_marginStart="20dp"
      android:layout_marginBottom="128dp"
      android:src="@android:drawable/ic_media_play"
      app:layout_constraintBottom_toTopOf="@+id/play_hard"
      app:layout_constraintStart_toStartOf="parent" />

  <ImageView
      android:id="@+id/play_sit"
      android:layout_width="70dp"
      android:layout_height="70dp"
      android:layout_marginStart="20dp"
      android:layout_marginBottom="132dp"
      android:src="@android:drawable/ic_media_play"
      app:layout_constraintBottom_toTopOf="@+id/play_stand"
      app:layout_constraintStart_toStartOf="parent" />

  <ImageView
      android:id="@+id/play_hard"
      android:layout_width="70dp"
      android:layout_height="70dp"
      android:layout_marginStart="20dp"
      android:layout_marginBottom="63dp"
      android:src="@android:drawable/ic_media_play"
      app:layout_constraintBottom_toTopOf="@+id/btnHome"
      app:layout_constraintStart_toStartOf="parent" />

  <TextView
      android:id="@+id/text_play_sit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="90dp"
      android:layout_marginBottom="162dp"
      android:text="座ったままできる運動"
      android:textSize="30sp"
      app:layout_constraintBottom_toTopOf="@+id/text_play_stand"
      app:layout_constraintStart_toStartOf="parent" />

  <TextView
      android:id="@+id/text_play_stand"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="90dp"
      android:layout_marginBottom="162dp"
      android:text="立って行う運動"
      android:textSize="34sp"
      app:layout_constraintBottom_toTopOf="@+id/text_play_hard"
      app:layout_constraintStart_toStartOf="parent" />

  <TextView
      android:id="@+id/text_play_hard"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="90dp"
      android:layout_marginBottom="73dp"
      android:text="激しめの運動"
      android:textSize="34sp"
      app:layout_constraintBottom_toTopOf="@+id/btnHome"
      app:layout_constraintStart_toStartOf="parent" />

  <Button
      android:id="@+id/btnNext"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="156dp"
      android:layout_marginBottom="44dp"
      android:text="乱数生成"
      app:layout_constraintBottom_toTopOf="@+id/text_play_sit"
      app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>